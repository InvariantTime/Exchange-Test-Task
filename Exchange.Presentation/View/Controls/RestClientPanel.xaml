<UserControl x:Class="Exchange.Presentation.View.Controls.RestClientPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Exchange.Presentation.View.Controls"
             xmlns:m="clr-namespace:Exchange.Presentation.Models"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:Exchange.Presentation.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="queryTypes" ObjectType="{x:Type system:Enum}"
                            MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="m:QueryTypes"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <converters:StringToIntConverter x:Key="intConverter"/>
        <converters:QueryToStringConverter x:Key="queryConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DockPanel>
            <StackPanel>
                <TextBlock FontSize="18" Margin="5" 
                           Foreground="{StaticResource ForegroundColor}">
                    Request type
                </TextBlock>

                <ComboBox Width="200" HorizontalAlignment="Left" Margin="5"
                          ItemsSource="{Binding Source={StaticResource queryTypes}}"
                          SelectedValue="{Binding Type}">
                </ComboBox>

                <TextBlock FontSize="16" 
                           Foreground="{StaticResource ForegroundColor}">
                    Currency pair
                </TextBlock>
                <StackPanel Orientation="Horizontal">
                    <TextBox Width="100" Height="24" HorizontalAlignment="Left" Margin="5"
                             Text="{Binding Query.FirstCurrency, Mode=TwoWay}"/>

                    <TextBlock FontSize="16"
                               Foreground="{StaticResource ForegroundColor}"
                               HorizontalAlignment="Center" VerticalAlignment="Center">
                        to
                    </TextBlock>
                    <TextBox Width="100" Height="24" HorizontalAlignment="Left" Margin="5"
                             Text="{Binding Query.SecondCurrency, Mode=TwoWay}"/>
                </StackPanel>

                <TextBlock Text="Limit" FontSize="15" Margin="5"
                           Foreground="{StaticResource ForegroundColor}"/>
                
                <TextBox Width="100" Height="24" HorizontalAlignment="Left" Margin="5"
                         Text="{Binding Path=Query.Limit, Mode=TwoWay, Converter={StaticResource intConverter}}"/>

                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>

                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="Candles">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="Frame" FontSize="15" Margin="5"
                               Foreground="{StaticResource ForegroundColor}"/>
                    
                    <TextBox Width="100" Height="24" HorizontalAlignment="Left" Margin="5"
                             Text="{Binding Path=Query.Frame, Mode=TwoWay, Converter={StaticResource intConverter}}"/>

                    <TextBlock FontSize="16"
                               Foreground="{StaticResource ForegroundColor}">
                    Time in milliseconds
                    </TextBlock>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="16" Foreground="{StaticResource ForegroundColor}"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                        from
                        </TextBlock>

                        <TextBox Width="100" Height="24" HorizontalAlignment="Left" Margin="5"
                                 Text="{Binding Path=Query.From, Mode=TwoWay, Converter={StaticResource intConverter}}"/>

                        <TextBlock FontSize="16" Foreground="{StaticResource ForegroundColor}"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                        to
                        </TextBlock>

                        <TextBox Width="100" Height="24" HorizontalAlignment="Left" Margin="5"
                                 Text="{Binding Path=Query.To, Mode=TwoWay, Converter={StaticResource intConverter}}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </DockPanel>

        <Button Width="200" Height="30" VerticalAlignment="Bottom" Margin="5"
                Command="{Binding SendCommand}">
            Send
        </Button>

        <ListBox Grid.Column="1" Background="{StaticResource ElementColor}" ItemsSource="{Binding Result}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border>
                        <TextBlock FontSize="14" Margin="0 0 0 2" 
                                  Foreground="{StaticResource ForegroundColor}" 
                                   Text="{Binding Converter={StaticResource queryConverter}}"/>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
