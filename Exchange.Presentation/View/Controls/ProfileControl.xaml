<UserControl x:Class="Exchange.Presentation.View.Controls.ProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Exchange.Presentation.View.Controls"
             xmlns:vm="clr-namespace:Exchange.Presentation.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        
        <DataGrid ItemsSource="{Binding Path=Wallet.Currencies}" FontSize="16"
                  Foreground="{StaticResource ForegroundColor}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Currency" Width="150" Binding="{Binding Key}"/>
                <DataGridTextColumn Header="Value" Width="180" Binding="{Binding Value}"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid Grid.Column="2" ItemsSource="{Binding ConvertWallet.Currencies, UpdateSourceTrigger=PropertyChanged}" FontSize="16"
                  Foreground="{StaticResource ForegroundColor}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Currency" Width="150" Binding="{Binding Path=Key, UpdateSourceTrigger=Explicit}"/>
                <DataGridTextColumn Header="Value" Width="180" Binding="{Binding Path=Value, UpdateSourceTrigger=Explicit}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="1" Grid.Column="2" Width="200" 
                Margin="5" HorizontalAlignment="Right" Command="{Binding ConvertCommand}">
            Calculate
        </Button>
    </Grid>
</UserControl>
